{
  "manifest_version": 3,
  "name": "Gmail Summarizer",
  "version": "1.0",
  "description": "Adds a summarize button to Gmail toolbar",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
} 